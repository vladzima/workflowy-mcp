# WorkFlowy MCP Server Configuration
# Copy this file to .env and fill in your actual values

# Required: Your WorkFlowy API key
# Get it from: https://workflowy.com/settings/api
WORKFLOWY_API_KEY=your-api-key-here

# Optional: API base URL (defaults to production API)
# WORKFLOWY_API_URL=https://api.workflowy.com

# Optional: Request timeout in seconds (default: 30)
# WORKFLOWY_TIMEOUT=30

# Optional: Maximum retry attempts for failed requests (default: 3)
# WORKFLOWY_MAX_RETRIES=3

# Optional: Enable debug logging (default: false)
# DEBUG=false

# Optional: Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO